<%= @users.class %>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% @albums.each do |album| %>  
        <div class="col">
            <% @users.each do |user| %>
                <% if user["id"] == album["id"]%>
                    <div class="card shadow-sm">
                        <%  @photos.each do |photo|%>
                            <% if photo["albumId"] == album["id"] %>
                                <%= image_tag photo["thumbnailUrl"], class:"card-img-top", width:"100%", height: 225 %>
                                <% break %>     
                            <% end %>    
                        <% end %>
                    
                        <div class="card-body">     
                            <p class="card-text">Full name: <%= user["name"] %></p>    
                                <h4>Album name: <%= album["title"] %></h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <%= link_to "user profile", user_path(user['id']), class:"btn btn-sm btn-outline-secondary"%>
                                    <%= link_to "gallery", album_path(album['id']), class:"btn btn-sm btn-outline-secondary"%>
                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>   
                        </div> 
                    </div> 
                <% end %>
            <% end %>
        </div>       
    <% end %>
</div>
